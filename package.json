{
  "name": "app",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron": "set NODE_ENV=dev && wait-on tcp:9527 && electron .",
    "e:serve": "concurrently -k \"yarn dev\" \"yarn electron\"",
    "e:build": "set NODE_ENV=pro && vite build && electron-builder"
  },
  "dependencies": {
    "esbuild-windows-64": "^0.14.21",
    "sass": "^1.49.7",
    "vue": "^3.2.25",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@vitejs/plugin-vue": "^2.2.0",
    "concurrently": "^7.0.0",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-tsc": "^0.29.8",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.3417.github.io",
    "productName": "relax",
    "copyright": "Copyright Â© 2021 Jone",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon":"/public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "files":[
      "dist/**/*",
      "electron/**/*"
    ],
    "extends": null,
    "directories": {
      "output": "e-app"
    }
  }
}
